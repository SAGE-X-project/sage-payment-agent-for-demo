# ============================================
# SAGE Payment Agent Environment Variables
# ============================================

# ---------- Agent Server Configuration ----------
AGENT_PORT=19083
AGENT_HOST=0.0.0.0

# Agent's public URL (for contract registration and discovery)
# Local:
AGENT_PUBLIC_URL=http://localhost:19083

# Remote/Cloud:
# AGENT_PUBLIC_URL=https://payment-agent.your-domain.com

# ---------- Logging Configuration ----------
LOG_LEVEL=info

# ---------- SAGE Protocol Configuration ----------
SAGE_ENABLED=true
SAGE_STRICT_MODE=true

# ---------- Blockchain Configuration ----------
# Ethereum RPC URL
# Local (Hardhat/Anvil):
BLOCKCHAIN_RPC_URL=http://localhost:8545

# Sepolia testnet:
# BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# AgentCardRegistry Contract Address
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Chain ID (31337 for local, 11155111 for sepolia)
CHAIN_ID=31337

# ---------- Agent Identity & Keys ----------
# Agent DID (optional - will be generated from private key if not provided)
AGENT_DID=

# Private key management
# Option 1: Auto-generate and store in secure location
PRIVATE_KEY_PATH=./keys/agent.key

# Option 2: Import existing private key (hex format without 0x prefix)
# AGENT_PRIVATE_KEY=your_private_key_here

# Option 3: Use keystore file
# KEYSTORE_PATH=./keys/keystore.json
# KEYSTORE_PASSWORD=your_password

# RFC 9421 Signing Key (JWK)
AGENT_JWK_FILE=./keys/payment.jwk

# RFC 9180 HPKE Key (X25519 JWK)
AGENT_KEM_JWK_FILE=./keys/kem/payment.x25519.jwk

# ---------- Transaction Configuration ----------
# Simulation mode (no real transactions)
TX_SIMULATION_MODE=true

# Transaction delay in milliseconds
TX_DELAY_MS=500

# Wallet address for transactions
WALLET_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# ---------- Agent Registry Configuration ----------
# Auto-register on startup
AUTO_REGISTER=true

# Agent metadata for registration
AGENT_NAME=Official Payment Agent
AGENT_DESCRIPTION=Blockchain-based secure payment processing agent
AGENT_VERSION=1.0.0
AGENT_CAPABILITIES=crypto_payment,stablecoin,rfc9421_signature,hpke_encryption
