# SAGE Payment Agent - Sepolia Testnet Configuration
# Deployed contracts information

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
AGENT_PORT=8091
LOG_LEVEL=info

# ============================================================================
# SAGE PROTOCOL CONFIGURATION
# ============================================================================
SAGE_ENABLED=true
SAGE_STRICT_MODE=true

# ============================================================================
# BLOCKCHAIN CONFIGURATION - SEPOLIA TESTNET
# ============================================================================
# Sepolia RPC endpoint (use Infura, Alchemy, or your own node)
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# ============================================================================
# ERC8004 CONTRACT ADDRESSES - SEPOLIA TESTNET
# ============================================================================

# ERC8004 Validation Registry
# - Manages validator registration and consensus
# - Constructor args: minStake=0.01 ETH, minValidators=3, consensusThreshold=66%
# - Etherscan: https://sepolia.etherscan.io/address/0x97291e2D3023d166878ed45BBD176F92E5Fda098
VALIDATION_REGISTRY_ADDRESS=0x97291e2D3023d166878ed45BBD176F92E5Fda098

# ERC8004 Reputation Registry
# - Tracks validator reputation scores
# - Constructor args: validationRegistry=0x97291e2D3023d166878ed45BBD176F92E5Fda098
# - Etherscan: https://sepolia.etherscan.io/address/0xE953B278fd2378BA4987FE07f71575dd3353C9a8
REPUTATION_REGISTRY_ADDRESS=0xE953B278fd2378BA4987FE07f71575dd3353C9a8

# ERC8004 Identity Registry (DID Registry)
# - Maps DIDs to public keys and metadata
# - Etherscan: https://sepolia.etherscan.io/address/0x5B0763c3649eee889966dF478a73e53Df0420C84
CONTRACT_ADDRESS=0x5B0763c3649eee889966dF478a73e53Df0420C84
IDENTITY_REGISTRY_ADDRESS=0x5B0763c3649eee889966dF478a73e53Df0420C84

# ============================================================================
# TRANSACTION CONFIGURATION
# ============================================================================
# Set to false when ready to send real transactions
TX_SIMULATION_MODE=true
TX_DELAY_MS=500

# Payment agent's wallet address (should have some Sepolia ETH)
WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================================================
# DEPLOYMENT INFORMATION
# ============================================================================
# Network: Sepolia Testnet
# Chain ID: 11155111
# Deployed: 2025-11-03
# Total Gas Used: 4,051,526
# Block Explorer: https://sepolia.etherscan.io
